
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng nhập</title>
    <link href="/Content/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                                <div class="card-body">
                                    <form action="/Authentication/Login" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" name="ma" type="text" placeholder="Mã đăng nhập" required />
                                            <label for="inputEmail">Mã đăng nhập</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputPassword" name="mk" type="password" placeholder="Mật khẩu" required />
                                            <label for="inputPassword">Mật khẩu</label>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <select class="form-select" name="role" required aria-label="Default select example">
                                                <option value="1" selected>Cố vấn học tập</option>
                                                <option value="2">Sinh viên</option>
                                            </select>
                                            <label for="inputPassword">Chọn vai trò</label>
                                        </div>
                                        <p style="color:red">@ViewBag.mess</p>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button class="btn btn-primary" style="margin: 0px auto" type="submit">Đăng nhập</button>
                                        </div>
                                    </form>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/Content/js/scripts.js"></script>
</body>
</html>


